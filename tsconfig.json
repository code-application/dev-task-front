{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next",
        "@/*": ["./src/*"]
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "jest.setup.js",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "test/mocks/node.js",
    "test/mocks/handler.js"
  ],
  "exclude": ["node_modules", "./test/**/*"]
}
